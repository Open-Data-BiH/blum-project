---
import BaseLayout from '../layouts/BaseLayout.astro';
import FAQSection from '../components/FAQSection.astro';
---

<BaseLayout
  pageKey="faq"
  title="FAQ | BLum"
  description="Najčešća pitanja i odgovori o korištenju BLum platforme, linijama, kartama i javnom prevozu u Banjoj Luci."
  canonicalUrl="https://open-data-bih.github.io/blum-project/faq/"
>
  <section class="section section--narrow" id="faq">
    <div class="container">
      <h2 class="section__title" id="faq-title">Česta pitanja</h2>
      <p class="section__subtitle" id="faq-subtitle">
        Odgovori na najčešća pitanja o javnom prevozu u Banjoj Luci
      </p>
      <FAQSection />
    </div>
  </section>
</BaseLayout>
