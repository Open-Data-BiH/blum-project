---
import BaseLayout from '../layouts/BaseLayout.astro';
import UpdatesSection from '../components/UpdatesSection.astro';
---

<BaseLayout
  pageKey="updates"
  title="Obavjestenja | BLum"
  description="Najnovija obavjestenja o izmjenama linija, redu voznje i servisnim informacijama javnog prevoza u Banjoj Luci."
  canonicalUrl="https://blum.ba/updates/"
>
  <section class="section section--narrow" id="updates">
    <div class="container">
      <h2 class="section__title" id="updates-title">Obavještenja</h2>
      <p class="section__subtitle" id="updates-subtitle">
        Obavještenja o promjenama u prevozu, zatvaranjima ulica i izmjenama reda vožnje
      </p>
      <UpdatesSection />
    </div>
  </section>
</BaseLayout>
